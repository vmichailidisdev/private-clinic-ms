<%- include('../partials/header_start.ejs'); -%>
<title>Private Clinic Dashboard</title>
<%- include('../partials/header_end.ejs'); -%>

<div class="d-flex" id="wrapper">

  <div class="border-right" id="sidebar-wrapper">
    <div class="sidebar-heading"><a href="/doctor"><i class="fas fa-hospital-symbol mr-2"></i>Private Clinic</a></div>
    <div class="list-group list-group-flush">
      <a class="list-group-item list-group-item-action" data-toggle="collapse" href="#collapseUsers" aria-expanded="true" role="button" aria-controls="collapseUsers">
        <span class="d-flex justify-content-between align-items-center">
          <div><i class="fas fa-users mr-3"></i>Users</div>
          <i class="fas fa-caret-down"></i>
        </span>
      </a>
      <div class="list-group list-group-flush collapse" id="collapseUsers">
        <a href="/doctor/clients" class="list-group-item list-group-item-action"><span class="sr-only">(current)</span><span class="pl-3">Clients</span></a>
        <a href="/doctor/secs" class="list-group-item list-group-item-action"><span class="pl-3">Secretary</span></a>
        <a href="/doctor/docs" class="list-group-item list-group-item-action"><span class="pl-3">Doctors</span></a>
      </div>
      <a href="/doctor/appts" class="list-group-item list-group-item-action"><i class="far fa-calendar-check mr-3"></i>Appointments</a>
      <a href="/doctor/rooms" class="list-group-item list-group-item-action"><i class="fas fa-procedures mr-3"></i>Rooms</a>
      <a href="/doctor/meds" class="list-group-item list-group-item-action active"><i class="fas fa-pills mr-3"></i>Medicines</a>
    </div>
  </div>

  <div id="page-content-wrapper">

    <nav class="navbar navbar-expand-md navbar-light bg-light border-bottom">
      <div id="menu-toggle">
        <button class="btn btn-primary">Toggle Menu</button>
        <button class="navbar-toggler" type="button"><i class="fas fa-bars"></i></button>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-user-circle fa-lg mr-2"></i>
              <%= user.email %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/doctor/settings">Settings</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/logout">Log Out</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid mt-3">

      <form action="/doctor/meds" method="post" class="needs-validation" autocomplete="off" novalidate>
        <div class="form-group">
          <label for="client-email">Client Email</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="client-email-addon"><i class="fas fa-envelope"></i></span>
            </div>
            <input type="email" class="form-control rounded-right" id="client-email" name="client" title="Provide a valid client email (example@email.com)." data-toggle="tooltip" data-placement="top" aria-describedby="client-email-addon" autofocus required>
            <div class="valid-feedback">
              Looks good.
            </div>
            <div class="invalid-feedback">
              Please provide a valid client email.
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="medicine-name">Medicine Name</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="medicine-name-addon"><i class="fas fa-pills"></i></span>
            </div>
            <input type="text" class="form-control rounded-right" id="medicine-name" name="name" title="Legal medicine name must contain characters only, below 100." data-toggle="tooltip" data-placement="top" pattern="[a-zA-Z ]{1,100}" maxlength="100" aria-describedby="medicine-name-addon" required>
            <div class="valid-feedback">
              Looks good.
            </div>
            <div class="invalid-feedback">
              Please provide a valid medicine name.
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-12 col-md-6">
            <label for="medicine-start-date">Start Date of the Medicine</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="medicine-start-date-addon"><i class="fas fa-calendar"></i></span>
              </div>
              <input type="date"  id="medicine-start-date" name="start" title="Provide a valid start date format (mm/dd/yyyy)." data-toggle="tooltip" data-placement="top" class="form-control rounded-right" aria-describedby="medicine-start-date-addon" required>
              <div class="valid-feedback">
                Looks good.
              </div>
              <div class="invalid-feedback">
                Please provide a valid start date for the medicine.
              </div>
            </div>
          </div>
          <div class="form-group col-12 col-md-6">
            <label for="medicine-end-date">End Date of the Medicine</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="medicine-end-date-addon"><i class="fas fa-calendar"></i></span>
              </div>
              <input type="date"  id="medicine-end-date" name="end" title="Provide a valid end date format (mm/dd/yyyy)." data-toggle="tooltip" data-placement="top" class="form-control rounded-right" aria-describedby="medicine-end-date-addon" required>
              <div class="valid-feedback">
                Looks good.
              </div>
              <div class="invalid-feedback">
                Please provide a valid end date for the medicine.
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="medical-instructions">Medical instructions</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="medical-instructions-addon"><i class="fas fa-notes-medical px-4"></i></span>
            </div>
            <textarea class="form-control rounded-right" id="medical-instructions" rows="3" title="Legal medicine instructions must contain characters or numbers, below 300." data-toggle="tooltip" data-placement="top" name="instr" pattern="[a-zA-Z0-9]{1,100}" aria-describedby="medical-instructions-addon"  maxlength="300" required> </textarea>
            <div class="valid-feedback">
              Looks good.
            </div>
            <div class="invalid-feedback">
              Please provide valid medical instructions.
            </div>
          </div>
        </div>
        <div class="text-right">
          <button type="submit" class="btn btn-outline-primary">Create Medicine</button>
        </div>
      </form>
    </div>

  </div>
</div>

<%- include('../partials/libs_bundle.ejs'); -%>
<script src="/javascripts/create-med.js"></script>
<%- include('../partials/footer_end.ejs'); -%>
