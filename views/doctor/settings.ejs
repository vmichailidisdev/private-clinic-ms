<%- include('../partials/header_start.ejs'); -%>
<title>Private Clinic Dashboard</title>
<%- include('../partials/header_end.ejs'); -%>

<div class="d-flex" id="wrapper">

  <div class="border-right" id="sidebar-wrapper">
    <div class="sidebar-heading"><a href="/doctor"><i class="fas fa-hospital-symbol mr-2"></i>Private Clinic</a></div>
    <div class="list-group list-group-flush">
      <a class="list-group-item list-group-item-action" data-toggle="collapse" href="#collapseUsers" role="button" aria-expanded="true" aria-controls="collapseUsers">
        <span class="d-flex justify-content-between align-items-center">
          <div><i class="fas fa-users mr-3"></i>Users</div>
          <i class="fas fa-caret-down"></i>
        </span>
      </a>
      <div class="list-group list-group-flush collapse" id="collapseUsers">
        <a href="/doctor/clients" class="list-group-item list-group-item-action"><span class="sr-only">(current)</span><span class="pl-3">Clients</span></a>
        <a href="/doctor/secs" class="list-group-item list-group-item-action"><span class="pl-3">Secretary</span></a>
        <a href="/doctor/docs" class="list-group-item list-group-item-action"><span class="pl-3">Doctors</span></a>
      </div>
      <a href="/doctor/appts" class="list-group-item list-group-item-action active"><i class="far fa-calendar-check mr-3"></i>Appointments</a>
      <a href="/doctor/rooms" class="list-group-item list-group-item-action"><i class="fas fa-procedures mr-3"></i>Rooms</a>
      <a href="/doctor/meds" class="list-group-item list-group-item-action"><i class="fas fa-pills mr-3"></i>Medicines</a>
    </div>
  </div>

  <div id="page-content-wrapper">

    <nav class="navbar navbar-expand-md navbar-light bg-light border-bottom">
      <div id="menu-toggle">
        <button class="btn btn-primary">Toggle Menu</button>
        <button class="navbar-toggler" type="button"><i class="fas fa-bars"></i></button>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-user-circle fa-lg mr-2"></i>
              <%= user.email %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/doctor/settings">Settings</a>
              <!-- <div class="dropdown-divider"></div> -->
              <a class="dropdown-item" href="/logout">Log Out</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid mt-3">

      <%- include('../partials/error_messages.ejs'); -%>

      <h4>Change Password</h4>
      <form action="/doctor/settings" method="post" class="needs-validation" autocomplete="on" novalidate>
        <label for="password">Password</label>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="password-addon"><i class="fas fa-lock"></i></span>
          </div>
          <input type="password" name="password" id="password" title="Password must be between 8 and 16 alphanumerics long." class="form-control" aria-describedby="password-addon" data-toggle="tooltip" data-placement="top" pattern="[a-zA-Z0-9]{8,16}" maxlength="16" required>
          <div class="input-group-append">
            <span class="input-group-text bg-white rounded-right" id="password-toggle-addon" role="button"><i class="far fa-eye"></i></span>
          </div>
          <div class="valid-feedback">
            Looks good.
          </div>
          <div class="invalid-feedback">
            Please provide a valid password.
          </div>
        </div>
        <div class="form-row">
          <div class="col-md-6 mb-3">
            <label for="new-password">New Password</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="new-password-addon"><i class="fas fa-lock"></i></span>
              </div>
              <input type="password" name="newPassword" id="new-password" title="Password must be between 8 and 16 alphanumerics long." class="form-control" aria-describedby="new-password-addon" data-toggle="tooltip" data-placement="top" pattern="[a-zA-Z0-9]{8,16}" maxlength="16" required>
              <div class="input-group-append">
                <span class="input-group-text bg-white rounded-right" id="new-password-toggle-addon" role="button"><i class="far fa-eye"></i></span>
              </div>
              <div class="valid-feedback">
                Looks good.
              </div>
              <div class="invalid-feedback">
                Please provide a valid password.
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="confirm-new-password">Confirm Password</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="new-password-addon"><i class="fas fa-lock"></i></span>
              </div>
              <input type="password" name="confirmNewPassword" id="confirm-new-password" title="Password must be between 8 and 16 alphanumerics long." class="form-control" aria-describedby="confrim-new-password-addon" data-toggle="tooltip" data-placement="top" pattern="[a-zA-Z0-9]{8,16}" maxlength="16" required>
              <div class="input-group-append">
                <span class="input-group-text bg-white rounded-right" id="confirm-new-password-toggle-addon" role="button"><i class="far fa-eye"></i></span>
              </div>
              <div class="valid-feedback">
                Looks good.
              </div>
              <div class="invalid-feedback">
                Please provide a valid password.
              </div>
            </div>
          </div>
        </div>
        <div class="text-right">
          <button type="submit" class="btn btn-outline-primary">Change Password</button>
        </div>
      </form>
      <hr>
      <h4>Change Profile Information</h4>
      <form action="/doctor/settings" method="post" class="needs-validation" autocomplete="on" novalidate>
        <div class="form-row">
          <div class="col-md-6 mb-3">
            <label for="firstname">Legal Firstname</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="firstname-addon"><i class="fas fa-user"></i></span>
              </div>
              <input type="text" name="firstname" id="firstname" title="Legal last name must be in characters only, below 100." class="form-control rounded-right" aria-describedby="lastname-addon" data-toggle="tooltip" maxlength="100" pattern="[a-zA-Z]{,100}" required value="<%= user.firstname %>">
              <div class="valid-feedback">
                Looks good.
              </div>
              <div class="invalid-feedback">
                Please provide a valid legal first name.
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastname">Legal Lastname</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="firstname-addon"><i class="fas fa-user"></i></span>
              </div>
              <input type="text" name="lastname" id="lastname" title="Legal first name must be in characters only, below 100." class="form-control rounded-right" aria-describedby="firstname-addon" data-toggle="tooltip" data-placement="top" maxlength="100" pattern="[a-zA-Z]{,100}" required value="<%= user.lastname %>">
              <div class="valid-feedback">
                Looks good.
              </div>
              <div class="invalid-feedback">
                Please provide a valid legal first name.
              </div>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6 mb-3">
            <label for="birth">Date of birth</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="date-addon"><i class="fas fa-calendar"></i></span>
              </div>
              <input type="date"  id="birth" name="birth" class="form-control rounded-right" aria-describedby="date-addon" required value="<%= user.birth %>">
              <div class="valid-feedback">
                Looks good.
              </div>
              <div class="invalid-feedback">
                Please provide a valid date of birth.
              </div>
            </div>
          </div>
          <div class="form-group col-md-6 mb-3">
            <label>Gender</label>
            <div>
              <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" name="gender" id="male" class="custom-control-input" value="male" required <% if (user.gender === 'male') { %> <%= 'checked' %> <% } %>>
                <label class="custom-control-label" for="male">Male</label>
              </div>
              <div class="custom-control custom-radio">
                <input type="radio" name="gender" id="female" class="custom-control-input" value="female" required <% if (user.gender === 'female') { %> <%= 'checked' %> <% } %>>
                <label class="custom-control-label" for="female">Female</label>
                <div class="valid-feedback">
                  Looks good.
                </div>
                <div class="invalid-feedback">
                  Please choose your gender.
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="text-right">
          <button type="submit" class="btn btn-outline-primary">Change Profile Information</button>
        </div>
      </form>
    </div>

  </div>
</div>

<%- include('../partials/libs_bundle.ejs'); -%>
<script src="/javascripts/settings.js"></script>
<%- include('../partials/footer_end.ejs'); -%>
